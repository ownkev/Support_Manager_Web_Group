@page
@model Support_Manager_Web_Group.Pages.Tickets.CreateModel
@{
    ViewData["Title"] = "Submit New Ticket";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Ticket.Title" class="form-label required"></label>
                <input asp-for="Ticket.Title" class="form-control" />
                <span asp-validation-for="Ticket.Title" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Ticket.Category" class="form-label"></label>
                    <select asp-for="Ticket.Category" class="form-select" asp-items="Model.CategoryList">
                        <option value="">-- Select Category --</option>
                    </select>
                    <span asp-validation-for="Ticket.Category" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Ticket.PriorityID" class="form-label required">Priority</label>
                    <select asp-for="Ticket.PriorityID" class="form-select" asp-items="Model.PriorityList"></select>
                    <span asp-validation-for="Ticket.PriorityID" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Ticket.Description" class="form-label required"></label>
                <textarea asp-for="Ticket.Description" class="form-control" rows="8"></textarea>
                <span asp-validation-for="Ticket.Description" class="text-danger"></span>
            </div>

            <div class="mb-3 pt-2">
                <button type="submit" class="btn btn-success">Submit Ticket</button>
                <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
